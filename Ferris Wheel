      display: flex;
      justify-content: center;
      align-items: center;
      animation-name: spin;
      animation-duration: 20s;
      animation-fill-mode: forwards;
      animation-iteration-count: infinite;
    }

    .seat {
      position: absolute;
      width: 50px;
      height: 50px;
      background-color: #47f3ff;
      animation-duration: 1s;
      animation-fill-mode: forwards;
      animation-iteration-count: infinite;
       animation-name: color;
    }
    #seat1 { transform:translateX(120px);
             }
    #seat2 { transform: rotate(60deg) translateX(120px) rotate(-60deg); }
    #seat3 { transform: rotate(120deg) translateX(120px) rotate(-60deg); }
    #seat4 {transform: rotate(180deg) translateX(120px) rotate(-60deg); }
    #seat5 { transform: rotate(240deg) translateX(120px) rotate(-60deg); }
    #seat6 { transform: rotate(300deg) translateX(120px) rotate(-60deg); }

    @keyframes spin {
      0% {
        transform: rotate(0deg);
      }
      100% {
        transform: rotate(360deg);
      }

    }

    @keyframes color {
      0% {
        background-color: rgb(128, 0, 81);
      }

      100% {
        background-color: rgb(255, 0, 183);
      }
    }
